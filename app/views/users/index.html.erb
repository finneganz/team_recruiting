<div class="center jumbotron">
    <h1>Team Recruiting App</h1>
    <ul>
        <% if @users.nil? %>
            <%# なかった時の処理 %>
        <% else %>
            <% @users.each do |user| %>
                <div class="user_board">
                    <li><%= link_to user.name, user_detail_path(user.id) %></li>
                </div>
            <% end %>
        <% end %>
    </ul>
    <% if user_signed_in? %>
        
    <% else %>
        <%= link_to "Sign in now!", signup_path, class:"btn btn-lg btn-primary" %>
    <% end %>
</div>